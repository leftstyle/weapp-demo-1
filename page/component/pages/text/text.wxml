<import src="../../../common/head.wxml"></import>
<import src="../../../common/foot.wxml"></import>
<view class="container">
    <template is="head" data="{{title:'text'}}"></template>
    <view class="page-body">
        <view class="page-section page-section-spacing">
            <view class="text-box" scrollTop="{{scrollTop}}" scrollY="true">
                <text>{{text}}</text>
            </view>
            <button bindtap="add" disabled="{{!canAdd}}">add line</button>
            <button bindtap="remove" disabled="{{!canRemove}}">remove line</button>
        </view>
    </view>
    <template is="foot" data></template>
</view>
