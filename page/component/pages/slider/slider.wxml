<import src="../../../common/head.wxml"></import>
<import src="../../../common/foot.wxml"></import>
<view class="container">
    <template is="head" data="{{title:'slider'}}"></template>
    <view class="page-body">
        <view class="page-section page-section-gap">
            <view class="page-section-title">设置step</view>
            <view class="body-view">
                <slider bindchange="slider2change" step="5" value="60"></slider>
            </view>
        </view>
        <view class="page-section page-section-gap">
            <view class="page-section-title">显示当前value</view>
            <view class="body-view">
                <slider showValue bindchange="slider3change" value="50"></slider>
            </view>
        </view>
        <view class="page-section page-section-gap">
            <view class="page-section-title">设置最小/最大值</view>
            <view class="body-view">
                <slider showValue bindchange="slider4change" max="200" min="50" value="100"></slider>
            </view>
        </view>
    </view>
    <template is="foot" data></template>
</view>
